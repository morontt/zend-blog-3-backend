<div id="flashes">
</div>

<div class="page-header">
    <h1><i class="glyphicon glyphicon-tag"></i> Управление тегами.</h1>
</div>

<table class="table table-bordered">
    <thead>
    <tr>
        <th class="center-text">#id</th>
        <th>Тег</th>
        <th>slug</th>
        <th class="text-right">Количество записей</th>
        <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {{#each tag in model}}
        <tr>
            <td class="center-text">{{tag.id}}</td>
            <td>{{tag.name}}</td>
            <td>{{tag.url}}</td>
            <td class="text-right">-</td>
            <td class="center-text">
                <a class="btn btn-primary" href="#">
                    <i class="glyphicon glyphicon-pencil"></i>
                    <span>edit</span>
                </a>
                <button class="btn btn-danger btn-confirm">
                    <i class="glyphicon glyphicon-trash"></i>
                    <span>delete</span>
                </button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{partial 'footer'}}
