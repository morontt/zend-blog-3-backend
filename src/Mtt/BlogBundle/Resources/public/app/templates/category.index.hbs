<div id="flashes">
</div>

<div class="page-header">
    <h1><i class="glyphicon glyphicon-th-list"></i> Управление категориями.</h1>
</div>

<table class="table table-bordered">
    <thead>
    <tr>
        <th class="center-text">#id</th>
        <th>Категория</th>
        <th>Родитель</th>
        <th>slug</th>
        <th class="text-right">Количество записей</th>
        <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {{#each category in model}}
        <tr>
            <td class="center-text">{{category.id}}</td>
            <td>{{category.name}}</td>
            <td>
                {{#if category.parent}}
                    {{category.parent.name}}
                {{else}}
                    -
                {{/if}}
            </td>
            <td>{{category.url}}</td>
            <td class="text-right">-</td>
            <td class="center-text">
                <a class="btn btn-primary" href="#">
                    <i class="glyphicon glyphicon-pencil"></i>
                    <span>edit</span>
                </a>
                <button class="btn btn-danger btn-confirm">
                    <i class="glyphicon glyphicon-trash"></i>
                    <span>delete</span>
                </button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{paginator-list meta=model.meta routeName='category.index'}}

{{partial 'footer'}}
