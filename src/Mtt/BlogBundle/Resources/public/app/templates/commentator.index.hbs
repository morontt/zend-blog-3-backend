<div id="flashes">
</div>

<div class="page-header">
    <h1><i class="glyphicon glyphicon-user"></i> Управление комментаторами.</h1>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th class="center-text">#id</th>
        <th>Аватар</th>
        <th>Ник</th>
        <th>Емейл</th>
        <th>Сайт</th>
        <th class="text-right">Disqus ID</th>
        <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {{#each commentator in model}}
        <tr>
            <td class="center-text">{{commentator.id}}</td>
            <td>
                <img {{bind-attr src=commentator.gravatarUrl}}
                     alt="avatar"/>
            </td>
            <td>
                <strong>{{commentator.name}}</strong>
            </td>
            <td>{{commentator.email}}</td>
            <td>{{commentator.website}}</td>
            <td class="text-right">
                {{#if commentator.disqusId}}
                    {{commentator.disqusId}}
                {{else}}
                    -
                {{/if}}
            </td>
            <td>
                <div class="pull-right">
                    <a class="btn btn-primary" href="#">
                        <i class="glyphicon glyphicon-pencil"></i>
                        <span>edit</span>
                    </a>
                    <button class="btn btn-danger btn-confirm">
                        <i class="glyphicon glyphicon-trash"></i>
                        <span>delete</span>
                    </button>
                </div>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{paginator-list meta=model.meta routeName='commentator.index'}}

{{partial 'footer'}}
