<div class="row">
    <div class="col-xs-9">
        <ul class="pagination">
            {{#if meta.previous}}
                <li class="prev">
                    {{#link-to routeName (query-params page=meta.previous)}}&larr; Назад{{/link-to}}
                </li>
            {{else}}
                <li class="prev disabled"><span>&larr; Назад</span></li>
            {{/if}}

            <li class="active"><span>1</span></li>
            <li><a href="/item/?page=2">2</a></li>
            <li><a href="/item/?page=3">3</a></li>
            <li><a href="/item/?page=4">4</a></li>
            <li><a href="/item/?page=5">5</a></li>
            <li><a href="/item/?page=6">6</a></li>
            <li><a href="/item/?page=7">7</a></li>
            {{!-- <li class="disabled"><span>&hellip;</span></li> --}}
            <li><a href="/item/?page=12">12</a></li>

            {{#if meta.next}}
                <li class="next">
                    {{#link-to routeName (query-params page=meta.next)}}Вперёд &rarr;{{/link-to}}
                </li>
            {{else}}
                <li class="next disabled"><span>Вперёд &rarr;</span></li>
            {{/if}}
        </ul>
    </div>
</div>
