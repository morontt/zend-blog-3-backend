default:
#    autoload:
#        '': %paths.base%/src

    formatters:
        progress: true

    extensions:
        Behat\Symfony2Extension: ~
        Behat\MinkExtension:
            base_url: 'https://example.org/app_test.php/'
            sessions:
                goutte:
                    goutte:
                        guzzle_parameters:
                            verify: false
        VIPSoft\DoctrineDataFixturesExtension\Extension:
            lifetime:    feature
            autoload:    true
            directories: ~
            fixtures:    ~

    suites:
        test_suite:
            type: symfony_bundle
            bundle: MttTestBundle
            mink_session: goutte
            contexts:
                - Mtt\TestBundle\Features\Context\FeatureContext: ~
