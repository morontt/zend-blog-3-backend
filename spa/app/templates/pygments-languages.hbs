<div id="topbar">
    <ol class="breadcrumb">
        <li>Языки программирования</li>
    </ol>
</div>
<div id="content">
    <div id="flashes">
    </div>

    <div class="page-header">
        <div class="actions-menu">
            <a class="btn btn-primary" {{action "openModal"}}>
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>Создать ЯП</span>
            </a>
        </div>
        <h1><i class="glyphicon glyphicon-cog"></i> Управление ЯП.</h1>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th class="center-text column-id">#id</th>
            <th>Название</th>
            <th>Лексер</th>
            <th class="actions">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {{#each model as |lang|}}
            {{tr-lang lang=lang}}
        {{/each}}
        </tbody>
    </table>

    {{paginator-list meta=model.meta routeName="pygmentsLanguages"}}

    {{footer-partial}}

    {{delete-confirm action="removeLang"}}

    <div class="modal fade" id="modal_new_lang" tabindex="-1" role="dialog"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                            class="close"
                            aria-label="Close"
                        {{action "closeModal"}}>
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Новый ЯП</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="control-label">Название:</label>
                            {{input type="text"
                                class="form-control"
                                value=newLangName}}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Лексер:</label>
                            {{input type="text"
                                class="form-control"
                                value=newLangLexer}}
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    {{#if enableLangButton}}
                        <button type="button"
                                class="btn btn-primary"
                            {{action "createLang"}}>Создать</button>
                    {{else}}
                        <button type="button"
                                class="btn btn-primary"
                                disabled="disabled">Создать</button>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
