<div id="topbar">
    <ol class="breadcrumb">
        <li>
            {{#link-to "pygmentsCode"}}
                Код
            {{/link-to}}
        </li>
        <li>Редактирование</li>
    </ol>
</div>
<div id="content">
    <div id="flashes">
    </div>
    <div class="page-header">
        <h1>
            <i class="glyphicon glyphicon-duplicate"></i> Редактирование кода
        </h1>
    </div>
    {{form-code model=model
        back=(action "back")
        afterSave=(action "afterSave")
        languageChoices=languageChoices}}

    <div class="alert alert-success {{alertClass}}" role="alert">
        Код успешно сохранён
    </div>

    {{footer-partial}}
</div>
