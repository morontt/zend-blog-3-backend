<div id="topbar">
    <ol class="breadcrumb">
        <li>
            {{#link-to "comments"}}
                Комментарии
            {{/link-to}}
        </li>
        <li>Ответ</li>
    </ol>
</div>
<div id="content">
    <div id="flashes">
    </div>
    <div class="page-header">
        <h1>
            <i class="glyphicon glyphicon-envelope"></i> Ответить на комментарий
        </h1>
    </div>
    <br>
    <div class="row">
        <div class="col-md-1">
            <img src="{{model.comment.avatarUrl}}" alt="{{model.comment.avatarTitle}}"/>
        </div>
        <div class="col-md-9">
            <p>{{model.comment.text}}</p>
        </div>
    </div>
    <div class="row">
        <hr/>
        <div class="col-md-1"></div>
        <div class="col-md-9">
            <div class="form-group">
                {{textarea rows="10"
                           class="form-control"
                           value=model.newComment.text}}
            </div>
        </div>
    </div>
    <div class="form-actions">
        <button {{action "reply"}} class="btn btn-primary btn-lg">
            <i class="icon-save"></i> Отправить
        </button>
    </div>
    {{footer-partial}}
</div>
