<div id="topbar">
    <ol class="breadcrumb">
        <li>Записи</li>
    </ol>
</div>
<div id="content">
    <div id="flashes">
    </div>

    <div class="page-header">
        <div class="actions-menu">
            {{#link-to "postcreate" class="btn btn-primary"}}
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>Создать запись</span>
            {{/link-to}}
        </div>
        <h1><i class="glyphicon glyphicon-file"></i> Управление записями.</h1>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th class="center-text">#id</th>
            <th>Заголовок</th>
            <th>Категория</th>
            <th>Скрытие</th>
            <th class="text-right">Дата создания</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {{#each model as |post|}}
            {{tr-post post=post}}
        {{/each}}
        </tbody>
    </table>

    {{paginator-list meta=model.meta routeName="posts"}}

    {{footer-partial}}

    {{delete-confirm action="removePost"}}
</div>
