<div id="topbar">
    <ol class="breadcrumb">
        <li>Юзеры</li>
    </ol>
</div>
<div id="content">
    <div id="flashes">
    </div>

    <div class="page-header">
        <h1><i class="glyphicon glyphicon-user"></i> Управление пользователями.</h1>
    </div>

    <table class="table table-bordered table-striped table-commentators">
        <thead>
        <tr>
            <th class="center-text column-id">#id</th>
            <th class="column-cmtr">Аватар</th>
            <th>Username</th>
            <th>Псевдоним</th>
            <th>Емейл</th>
            <th>Роль</th>
            <th class="center-text column-gender"></th>
            <th class="text-right text-date">Создан</th>
            <th class="actions">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {{#each model as |user|}}
            {{tr-user user=user}}
        {{/each}}
        </tbody>
    </table>

    {{paginator-list meta=model.meta routeName="users"}}

    {{footer-partial}}
</div>
