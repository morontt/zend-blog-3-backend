<div id="topbar">
    <ol class="breadcrumb">
        <li>Юзеры</li>
    </ol>
</div>
<div id="content">
    <div id="flashes">
    </div>

    <div class="page-header">
        <h1><i class="glyphicon glyphicon-user"></i> Управление пользователями.</h1>
    </div>

    <table class="table table-bordered table-striped table-commentators">
        <thead>
        <tr>
            <th class="center-text column-id">#id</th>
            <th class="column-cmtr">Аватар</th>
            <th>Username</th>
            <th>Псевдоним</th>
            <th>Емейл</th>
            <th>Роль</th>
            <th class="center-text column-gender"></th>
            <th class="text-right text-date">Создан</th>
        </tr>
        </thead>
        <tbody>
        {{#each model as |user|}}
            <tr>
                <td class="center-text">{{user.id}}</td>
                <td>
                    <img src="{{user.avatarUrl}}" width="80" height="80" alt="{{user.avatarTitle}}"/>
                </td>
                <td>
                    <strong>{{user.username}}</strong>
                </td>
                <td class="text-break-word">{{user.displayName}}</td>
                <td class="text-break-word">{{user.email}}</td>
                <td class="text-break-word">{{user.role}}</td>
                <td class="center-text text-gender">
                    {{#if user.isMale}}
                        <i class="glyphicon mars"></i>
                    {{else}}
                        <i class="glyphicon venus"></i>
                    {{/if}}
                </td>
                <td class="text-right">{{date-format user.createdAt 'DD.MM.YYYY, HH:mm:ss'}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    {{paginator-list meta=model.meta routeName="users"}}

    {{footer-partial}}
</div>
