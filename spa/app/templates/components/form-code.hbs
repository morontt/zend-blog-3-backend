<div class="tab-content">
    <div class="tab-pane active">
        <div class="form-group">
            <label class="col-lg-1 control-label required">Исходный код:</label>
            <div class="col-lg-11">
                {{textarea rows="25"
                    class="form-control"
                    value=model.code}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-1 control-label required">Синтаксис:</label>
            <div class="col-lg-3">
                {{select-field
                    content=languageChoices
                    selectedValue=model.languageId}}
            </div>
        </div>
    </div>
</div>
<div class="form-actions">
    <button {{action "save"}} class="btn btn-primary btn-lg">
        <i class="icon-save"></i> Сохранить
    </button>
    <button {{action "reset"}} class="btn btn-danger btn-lg">
        <i class="icon-remove"></i> Отменить
    </button>
</div>
