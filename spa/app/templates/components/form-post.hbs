<div class="tab-content">
    <div class="tab-pane active">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-lg-2 control-label required">Заголовок:</label>
                    <div class="col-lg-10">
                        {{input class="input-lg form-control"
                            type="text"
                            value=model.title}}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label required">Description:</label>
                    <div class="col-lg-10">
                        {{input class="input-lg form-control"
                            type="text"
                            value=model.description}}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-lg-2 control-label required">Slug:</label>
                    <div class="col-lg-10">
                        {{input class="input-lg form-control"
                            type="text"
                            value=model.url}}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label required">Категория:</label>
                    <div class="col-lg-10">
                        {{select-field
                            content=categoryChoices
                            selectedValue=model.categoryId}}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-1 control-label required">Текст:</label>
            <div class="col-lg-11">
                {{textarea rows="25"
                    class="input-lg form-control"
                    value=model.text}}
            </div>
        </div>
        {{tags-autocomplete selectedValue=model.tagsString}}
        <div class="form-group">
            <label class="col-lg-1 control-label required">Скрытие:</label>
            <div class="col-lg-11">
                {{input type="checkbox" checked=model.hidden}}
            </div>
        </div>
    </div>
</div>
<div class="form-actions">
    <button {{action "save"}} class="btn btn-primary btn-lg">
        <i class="icon-save"></i> Сохранить
    </button>
    <button {{action "reset"}} class="btn btn-danger btn-lg">
        <i class="icon-remove"></i> Отменить
    </button>
</div>
